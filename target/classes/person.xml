<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="person1" class="com.douzone.di_ex03.Person">
		<constructor-arg>
			<value>홍길동</value>
		</constructor-arg>
		<constructor-arg>
			<value>남자</value>
		</constructor-arg>
		<constructor-arg>
			<value>18</value>
		</constructor-arg>
		<constructor-arg>
			<value>888888-1234567</value>
		</constructor-arg>
	</bean>

	<bean id="person2" class="com.douzone.di_ex03.Person">
		<constructor-arg>
			<value>신사임당</value>
		</constructor-arg>
		<constructor-arg value="여자"/>
		<constructor-arg value="35"/>
		<constructor-arg value="999999-2345678"/>
	</bean>

	<bean id="personInfo" class="com.douzone.di_ex03.PersonInfo">
		<constructor-arg>
			<ref bean="person1"/>
		</constructor-arg>
	</bean>

</beans>
